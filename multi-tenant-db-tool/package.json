{
  "name": "multi-tenant-db-tool",
  "version": "0.1.0",
  "description": "Open-source multi-tenancy toolkit for PostgreSQL",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:test": "docker-compose -f infra/docker-compose.test.yml up -d"
  },
  "devDependencies": {
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  }
}
